<form class="form-user" {{action 'createUser' on='submit'}}>
    <div class="input-group">
      {{input id='username' class='form-control' value=newUser.username placeholder='Username'}}
      {{input id='password' class='form-control' value=newUser.password placeholder='Password'}}
      {{input id='role' class='form-control' value=newUser.role placeholder='Role'}}

    </div>
    <div class="input-group">

        <button class="btn btn-success" type="submit">
            Add
        </button>
        <button class="btn btn-danger" type="reset">
            Clear
        </button>
    </div>
</form>

<table class="table">
    <thead>
    <th>ID</th>
    <th>username:</th>
    <th>password</th>
    <th>Role</th>
    <th>Date Created:</th>
    </thead>
  {{#each users as |user|}}
      <tr class="entry" id="tr-{id}">
          <td>{{user.id}}</td>
          <td>{{user.username}}</td>
          <td>{{user.password}}</td>
          <td>{{user.role}}</td>
          <td>{{user.createdAt}}</td>
      </tr>
  {{/each}}
</table>


