<form class="form-horizontal" {{action 'authenticate' on='submit'}}>
    <div class="form-group">
        <label class="col-sm-4 control-label" for="identification">Login</label>

        <div class="col-sm-8">
          {{input id='identification' class='form-control' value=userLogin.username placeholder='Enter Login'}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-4 control-label" for="password">Password</label>

        <div class="col-sm-8">
          {{input id='password' class='form-control'  type='password' value=userLogin.password placeholder='Enter Password'}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
            <button class="btn btn-default" type="submit">
                Sign In
            </button>
        </div>
    </div>
</form>